---
import Layout from '../../layouts/Layout.astro';
import { getAllNews, CATEGORIES, formatDate } from '../../utils/newsUtils.js';

const allNews = await getAllNews();
const latestNews = allNews[0];
---

<Layout title="Investigaciones Â· Corvus News">
  <style>
    .news-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .news-hero {
      text-align: center;
      margin-bottom: 4rem;
      padding: 3rem 0;
      background: var(--bg-card);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border-primary);
    }
    
    .news-title {
      font-family: var(--font-display);
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }
    
    .news-subtitle {
      font-size: 1.25rem;
      color: var(--text-secondary);
      margin-bottom: 2rem;
    }
    
    .featured-section {
      background: var(--bg-secondary);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      margin-bottom: 4rem;
    }
    
    .featured-title {
      font-family: var(--font-display);
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 2rem;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .news-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }
    
    .news-article {
      background: var(--bg-card);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-lg);
      overflow: hidden;
      transition: var(--transition);
    }
    
    .news-article:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
      border-color: var(--accent-primary);
    }
    
    .article-image {
      width: 100%;
      height: 200px;
      background: linear-gradient(135deg, var(--accent-tertiary), var(--bg-secondary));
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .article-placeholder {
      font-size: 3rem;
      color: var(--accent-primary);
      opacity: 0.5;
    }
    
    .article-content {
      padding: 2rem;
    }
    
    .article-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
      color: var(--text-muted);
      flex-wrap: wrap;
    }
    
    .article-category {
      background: var(--accent-primary);
      color: var(--bg-primary);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-sm);
      font-weight: 600;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .article-title {
      font-family: var(--font-display);
      font-size: 1.25rem;
      font-weight: 700;
      line-height: 1.3;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }
    
    .article-excerpt {
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
      line-height: 1.6;
      font-size: 0.95rem;
    }
    
    .article-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--accent-primary);
      text-decoration: none;
      font-weight: 600;
      transition: var(--transition);
    }
    
    .article-link:hover {
      color: var(--accent-secondary);
      transform: translateX(4px);
    }
    
    @media (max-width: 768px) {
      .news-container {
        padding: 1rem;
      }
      
      .news-title {
        font-size: 2rem;
      }
      
      .news-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <br/><br/><br/>
  
  <div class="news-container">
    <!-- Featured Section -->
    {latestNews && (
      <section class="featured-section">
        <h2 class="featured-title">
          ðŸ”¥ Noticia MÃ¡s Reciente
        </h2>
        
        <article class="news-article">
          <div class="article-image" style={`background: linear-gradient(135deg, ${latestNews.categoryInfo?.color}, var(--bg-secondary))`}>
            <span class="article-placeholder">{latestNews.categoryInfo?.icon}</span>
          </div>
          <div class="article-content">
            <div class="article-meta">
              <span class="article-category" style={`background: ${latestNews.categoryInfo?.color}`}>
                {latestNews.categoryInfo?.name}
              </span>
              <span>{formatDate(latestNews.date)}</span>
              <span>{latestNews.author}</span>
            </div>
            <h3 class="article-title">{latestNews.title}</h3>
            <p class="article-excerpt">{latestNews.excerpt}</p>
            <a href={latestNews.url} class="article-link">
              Leer noticia completa â†’
            </a>
          </div>
        </article>
      </section>
    )}

    <!-- News Grid -->
    <section class="news-grid">
      {allNews.slice(1).map(article => (
        <article class="news-article">
          <div class="article-image" style={`background: linear-gradient(135deg, ${article.categoryInfo?.color}, var(--bg-secondary))`}>
            <span class="article-placeholder">{article.categoryInfo?.icon}</span>
          </div>
          <div class="article-content">
            <div class="article-meta">
              <span class="article-category" style={`background: ${article.categoryInfo?.color}`}>
                {article.categoryInfo?.name}
              </span>
              <span>{formatDate(article.date)}</span>
              <span>{article.author}</span>
            </div>
            <h3 class="article-title">{article.title}</h3>
            <p class="article-excerpt">{article.excerpt}</p>
            <a href={article.url} class="article-link">
              Leer noticia completa â†’
            </a>
          </div>
        </article>
      ))}
    </section>
  </div>
</Layout>